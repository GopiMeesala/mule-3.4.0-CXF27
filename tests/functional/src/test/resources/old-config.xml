<?xml version="1.0" encoding="ISO-8859-1"?>

<!DOCTYPE mule-configuration PUBLIC "-//MuleSoft //DTD mule-configuration XML V1.0//EN"
                                "http://mule.mulesoft.org/dtds/mule-configuration.dtd">

<mule-configuration id="tcp_functional_test" version="1.0">

    <mule-environment-properties/>

    <global-endpoints>
        <endpoint name="clientEndpoint" address="tcp://localhost:${port1}" synchronous="true"/>
    </global-endpoints>

    <model name="main">
        <mule-descriptor name="testComponent" implementation="org.mule.tck.functional.FunctionalTestComponent">
            <inbound-router>
                <global-endpoint name="clientEndpoint"/>
            </inbound-router>
        </mule-descriptor>
    </model>

</mule-configuration>
